REVERSE OF NUMBER

public class Mavenproject36 {
public static void main (String[]args)
    {

        int num = 1234, reverse = 0, rem;
        for( ;num != 0; num = num/10)
        {
            rem = num % 10;
            reverse = reverse * 10 + rem;
        }
        System.out.println ("Reversed Number: " + reverse);
    }
}
